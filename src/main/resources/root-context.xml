<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- Chef chef = new Chef(); 랑 비슷함 -->
    <bean class="ac.kr.hnu.iutp.Chef" id="chef">
        <!-- chef.setName("백종원") -->
        <property name="name" value="백종원" />
        <!-- chef.setAge (57); -->
        <property name="age" value="57" />
    </bean>

    <bean class="ac.kr.hnu.iutp.Restaurant" id="restaurant">
        <property name="name" value="miso restaurant"/>
        <property name="address" value="대전광역시 동구"/>
        <property name="phone" value="042-222-2222"/>

    </bean>
</beans>